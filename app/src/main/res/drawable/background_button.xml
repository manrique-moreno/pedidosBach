<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#D49646"
                android:centerColor="#FB7246"
                android:endColor="#FF5722"
                android:angle="180"
                />
            <corners
                android:radius="40dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#D59C52"
                android:centerColor="#FD7E55"
                android:endColor="#FB6231"
                android:angle="180"
                />
            <corners
                android:radius="40dp" />
        </shape>
    </item>

</selector>