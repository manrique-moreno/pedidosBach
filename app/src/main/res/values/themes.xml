<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PedidosBach" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/orange</item>
        <item name="android:statusBarColor">@color/orange</item>
    </style>

    <style name="EditTextOrangeCursor" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/orange_cursor</item>
        <item name="colorControlNormal">#FF5722</item>
        <item name="colorControlActivated">#FF5722</item>
        <item name="colorControlHighlight">#FF5722</item>
    </style>

    <style name="button">
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/background_button_null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_active">
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edittextAdd">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:backgroundTint">@drawable/edittext_background</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Theme.PedidosBach" parent="Base.Theme.PedidosBach" />
</resources>